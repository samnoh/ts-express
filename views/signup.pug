extends common/layout

block content
    h1.mb-5.text-center Register Page
    hr.mb-5
    .row.justify-content-center
        include common/flash.pug
        .col-md-8.mb-5
            form(method='POST' action='/auth/signup')
                .form-group
                    label(for='inputName') Name
                    input#inputName.form-control(type='text' name='name' required)
                .form-group
                    label(for='inputEmail') Email
                    input#inputEmail.form-control(type='email' name='email' required)
                .form-group
                    label(for='inputId') ID
                    input#inputId.form-control(type='text' name='id' required)
                .form-group.mb-5
                    label(for='inputPassword') Password
                    input#inputPassword.form-control(type='password' name='password' required)
                input(type='hidden' name='_csrf' value=csrfToken)
                button(type='submit').btn.btn-lg.btn-block.btn-outline-primary Register